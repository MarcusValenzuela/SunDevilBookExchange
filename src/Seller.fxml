<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SellerController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #fdd835; -fx-padding: 10;">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="SUN DEVIL BOOK EXCHANGE">
            <font>
               <Font name="Arial" size="10.0" />
            </font></Label>
        </HBox>
    </top>

    <left>
        <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #f5f5f5;">
            <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="BROWSE ALL" />
            <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="BROWSE BY CATEGORY" />
            <VBox spacing="5">
                <Label text="English Language" />
                <Label text="Natural Science" />
                <Label text="Computer" />
                <Label text="Math" />
                <Label text="Others" />
            </VBox>
         <VBox prefHeight="260.0" prefWidth="184.0" />
            <Button prefHeight="44.0" prefWidth="184.0" style="-fx-background-color: #cccccc;" text="LOGOUT" />
         <padding>
            <Insets right="10.0" />
         </padding>
         <BorderPane.margin>
            <Insets right="10.0" />
         </BorderPane.margin>
        </VBox>
    </left>

    <center>
        <VBox spacing="10" style="-fx-padding: 10;">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="YOUR LISTED BOOKS">
            <VBox.margin>
               <Insets top="10.0" />
            </VBox.margin></Label>
            <TableView fx:id="bookTable" prefHeight="400.0" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="titleColumn" text="Title" />
                    <TableColumn fx:id="authorColumn" text="Author" />
                    <TableColumn fx:id="yearColumn" text="Year" />
                    <TableColumn fx:id="categoryColumn" text="Category" />
                    <TableColumn fx:id="conditionColumn" text="Condition" />
                    <TableColumn fx:id="priceColumn" text="Listed Price" />
                    <TableColumn fx:id="stockColumn" text="Stock" />
                </columns>
            <VBox.margin>
               <Insets bottom="20.0" top="20.0" />
            </VBox.margin>
            </TableView>
         <padding>
            <Insets bottom="20.0" top="20.0" />
         </padding>
        </VBox>
    </center>

    <right>
        <VBox spacing="10" style="-fx-padding: 20; -fx-background-color: #f5f5f5;">
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #b71c1c;" text="LIST A BOOK" />
            <Label text="Book Title" />
            <TextField fx:id="titleField" />
            <Label text="Author" />
            <TextField fx:id="authorField" />
            <Label text="Publication Year" />
            <TextField fx:id="yearField" />
            <Label text="Category" />
            <ComboBox fx:id="categoryBox" prefWidth="159.5" />
            <Label text="Book Condition" />
            <ComboBox fx:id="conditionBox" prefWidth="159.5" />
            <Label text="Original Price" />
            <TextField fx:id="originalPriceField" />
            <Label style="-fx-font-weight: bold; -fx-text-fill: #fdd835;" text="Automatic Generated Price:" />
            <!-- <Label fx:id="generatedPriceLabel" text="$0.00" style="-fx-font-size: 16px; -fx-font-weight: bold;" /> -->
            <Button onAction="#handleListBook" style="-fx-background-color: #b71c1c; -fx-text-fill: white;" text="List my book" />
        </VBox>
    </right>
</BorderPane>
